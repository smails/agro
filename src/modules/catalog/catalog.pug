mixin catalog(state)
  if state == 'index'
    +b.catalog-nav
      +e.inner.inner
        +e.head
          +e.H2.title Каталог товаров
        +e.container
          +e.box(style="background-image: url(../images/cat-1.png)")
            +e.H3.caption Пестициды
            +e.list
              +e.item
                +e.A.link(href="#") Гербициды
              +e.item
                +e.A.link(href="#") Акарициды
              +e.item
                +e.A.link(href="#") Антидот
              +e.item
                +e.A.link(href="#") Дезинсекция
              +e.item
                +e.A.link(href="#") Десиканты
