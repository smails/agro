            +e.list
              +e.item
                +e.A.link(href="#") Комплексные
              +e.item
                +e.A.link(href="#") Фосфорные
              +e.item
                +e.A.link(href="#") Жидкие
              +e.item
                +e.A.link(href="#") Азотные
              +e.item
                +e.A.link(href="#") Азотно-фосфорные
          +e.box(style="background-image: url(../images/cat-3.png)")
            +e.H3.caption Биопрепараты
            +e.list
              +e.item
                +e.A.link(href="#") Биоудобрение
              +e.item
                +e.A.link(href="#") Бактерициды
              +e.item
                +e.A.link(href="#") Биофунгициды
